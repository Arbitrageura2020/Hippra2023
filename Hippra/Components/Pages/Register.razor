<div class="footer-profile-phy">
    @if (CurrentPage > 1)
    {
        <div class="back-profile-phy" @onclick="PreviousPage"><span>&lt; Back</span></div>
    }
    @if (CurrentPage < 3)
    {
        <div class="next-profile-phy" @onclick="NextPage"><span>Next &gt;</span></div>
    }
</div>


