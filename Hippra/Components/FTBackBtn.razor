@code {
    [Parameter]
    public string BackTitle { get; set; } = "";

    [Parameter]
    public bool UseRedirect { get; set; } = true;

    [Parameter]
    public string returnUrl { get; set; } = "/";

    private async Task wBack()
    {
        //await JSRuntime.InvokeAsync<string>("fireAlert","");
