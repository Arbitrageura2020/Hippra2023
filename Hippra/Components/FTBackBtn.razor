@if (UseRedirect)
{
    <div>
        <a href="@returnUrl" class=""><i class="ms-Icon ms-Icon--CaretLeftSolid8" aria-hidden="true"></i></a><span class="ml-1 mr-2"> @BackTitle</span>

    </div>
}
else
{
 @*    <div>
        <button  @onclick:preventDefault><i class="ms-Icon ms-Icon--CaretLeftSolid8" aria-hidden="true"></i></button><span class="ml-1 mr-2"> @BackTitle</span>
